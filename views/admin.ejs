<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8">
  <title>后台管理页面</title>
  <link rel="stylesheet" href="/stylesheets/admin.css">
  <script type="text/javascript" src="http://www.china.com.cn/lib/jquery-1.11.0.min.js"></script>
</head>
<body>
  <div class="headBox">
    <h1>后台管理页面</h1>
    <p><a href="/login">退出</a></p>
  </div>
  <div class="wrap">
    <h2>图片分类管理<input type="button" name="button" id="addBtn" value="添加分类"><input type="button" name="button" id="addPicBtn" value="添加图片"></h2>
    <% if (picTypeData.length) { %>
    <table id="tableData" width="50%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td>英文目录</td>
        <td>类型名称</td>
        <td>操作</td>
      </tr>
      <% picTypeData.forEach(function(picTypeList){ %>
      <tr>
        <td><input type="text" name="textfield" id="textfield" value="<%= picTypeList.directory %>" readOnly="true"></td>
        <td><input type="text" name="textfield" id="textfield" value="<%= picTypeList.title %>"></td>
        <td><input type="button" name="updateBtn" value="修改"><input type="button" name="removeBtn"  value="删除"></td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </div>
  <div class="dataBox">
    <form method="POST" action="/admin" id="picForm">
      <p><input type="text" name="directory" id="picForm_1" placeholder="英文目录" value=""><span style="color: #FFF;"> *无法修改 英文字母和数字</span></p>
      <p><input type="text" name="title" id="picForm_2" placeholder="类型名称" value=""></p>
      <p><input type="button" value="添加" id="dataBtn"><input type="button" value="关闭" id="clsBtn"></p>
      <input type="hidden" name="dataType" id="dataType" value="">
    </form>
  </div>
  <div class="picUploadBox">
    <iframe id="picUploadIfr" src="/upload" width="100%" height="100%" scrolling="yes" marginheight="0" frameborder="0" class="fl"></iframe>
    <div id="picUploadBtn" class="picUploadBtn">关闭</div>
  </div>
  <script type="text/javascript" src="javascripts/admin.js"></script>
</body>
</html>