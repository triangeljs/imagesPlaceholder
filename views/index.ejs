<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8">
  <title>图片合成</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script type="text/javascript" src="http://www.china.com.cn/lib/jquery-1.11.0.min.js"></script>
</head>
<body>
  <div class="picOptions">
    <form method="POST" action="/" id="picForm">
      <input type="text" name="picWidth" placeholder="图片宽度" value="<%= picWidth %>">
      <input type="text" name="picHeight" placeholder="图片高度" value="<%= picHeight %>">
      <% if (picTypeData.length) { %>
      <select name="picAttr">
        <option value="0">图片属性</option>
        <% picTypeData.forEach(function(picTypeList){ %>
        <option value="<%= picTypeList.directory %>" <%if(picAttr == picTypeList.directory) {%> selected<%}%>><%= picTypeList.title %></option>
        <% }) %>
      </select>
      <% } %>
      <input type="button" value="图片合成" class="picBtn">
    </form>
  </div>
  <% if (picArr.length) { %>
  <ul class="showPic">
    <% picArr.forEach(function(picSrc){ %>
    <li><img src="<%= picSrc %>" /></li>
    <% }) %>
  </ul>
  <% } %>
  <script type="text/javascript" src="/javascripts/index.js"></script>
</body>
</html>